                            <td >@item.Country</td>
                            <td >@item.BuyAt</td>
                            <td >@item.SellAt</td>
                            <td >
                        @*<a asp-controller="ExchangeOfficeBoard" asp-action="Edit" asp-route-id="@item.Id" asp-route-someName="some value">Edit</a>*@
                        @*              <a asp-controller="ExchangeOfficeBoard" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
