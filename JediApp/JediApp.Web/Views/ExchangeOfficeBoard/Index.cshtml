@model IEnumerable<JediApp.Database.Domain.Currency>

@{
    ViewData["Title"] = "Exchange Office Board";
}

<h4>Admin Exchange Office Board</h4>

<p>
    @*<a asp-action="Create">Create New</a>*@
    
    <form asp-action="AddCurrencyFromNbpApi">
        <input type="button" value="Create new currency" class="btn btn-secondary  btn-sm" onclick="location.href='@Url.Action("Create", "ExchangeOfficeBoard" )'" />
        <input type="submit" value="Import currency from NBP Api" class="btn btn-danger  btn-sm" />
    </form>
</p>
<p>
    <form asp-action="UpdateCurrencyRatesFromNbpApi">
        <input type="button" value="Visit www.nbp.pl" class="btn btn-secondary  btn-sm" onclick="window.open('https://www.nbp.pl/home.aspx?f=/kursy/kursyc.html')" />
        <input type="submit" value="Update currency rates from NBP Api" class="btn btn-danger  btn-sm" />
    </form>
</p>
<p>
    <form asp-action="Markup">
        <input type="button" value="Go to the change markup settings" class="btn btn-secondary  btn-sm" onclick="location.href='@Url.Action("Index", "AdminExchangeOfficeSettings" )'" />
        <input type="submit" value="Add markup to the all currencies" class="btn btn-danger  btn-sm" />
    </form>
</p>

<div class="hero-form pb-3">

    @*<table class="table table-bordered">*@
        @*<table cellpadding="5" cellspacing="0" style="border: 1px solid #ccc;font-size: 10pt;">*@
