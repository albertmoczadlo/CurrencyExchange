            <tr>
                @*<th>ID</th>*@
                <th >Currency name</th>
                <th >Symbol</th>
                <th >Country</th>
                <th >Buy AT</th>
                <th >Sell AT</th>
                <th >Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>@item.Id</td>*@
