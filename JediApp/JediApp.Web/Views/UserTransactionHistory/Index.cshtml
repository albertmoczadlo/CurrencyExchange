@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@*@using Export_Table_PDF_Core_MVC.Models*@
@model IEnumerable<JediApp.Database.Domain.TransactionHistory>

@{
    ViewData["Title"] = "UserTransactionHistory";
}

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#btnSubmit").click(function () {
                $("input[name='GridHtml']").val($("#Grid").html());
            });
        });
    </script>

<h4>Transactions History</h4>
    <form asp-action="GetPDF">
        <input type="hidden" name="GridHtml" />
    <input type="submit" id="btnSubmit" value="Download as PDF" class="btn btn-outline-secondary btn-sm align-text-bottom" />
    </form>
<br />
<div class="hero-form pb-3" id="Grid">

    @*<table class="table table-bordered">*@
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                @*<th>ID</th>*@
                <th >Name</th>
                <th >Email</th>
                <th >Currency</th>
                <th >Amount</th>
                <th >Date</th>
                <th >Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                        <tr>
                    @*<td>@item.Id</td>*@
                                <td >@item.User.FirstName @item.User.LastName</td>
                                <td >@item.User.Email</td>
                                <td >@item.CurrencyName</td>
                                <td >@item.Amount</td>
                                <td >@item.DateOfTransaction</td>
                                <td >@item.Description</td>                                    
                        </tr>
            }
        </tbody>
    </table>

</div>







